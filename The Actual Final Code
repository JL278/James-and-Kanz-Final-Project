var currentScene = 0;
//Reminder to go back and edit this
mouseDragged = function() {
    fill(fillColor);
    ellipse(mouseX, mouseY, 15, 15);
};

mouseClicked = function() {
    if(currentScene === 0){
       btn1.handleMouseClick();
       btn2.handleMouseClick();
       btn3.handleMouseClick();
  }
    if(currentScene === 1) {
    aButton.handleMouseClick();
    bButton.handleMouseClick();
    cButton.handleMouseClick();
    dButton.handleMouseClick();
    eButton.handleMouseClick();
    fButton.handleMouseClick();
    gButton.handleMouseClick();
    hButton.handleMouseClick();
    sc4.handleMouseClick();
    }
    if(currentScene === 3) {
    sc1.handleMouseClick();
    sc4a.handleMouseClick();
    sc5a.handleMouseClick();
    }
    if(currentScene === 4) {
    iButton.handleMouseClick();
    jButton.handleMouseClick();
    kButton.handleMouseClick();
    lButton.handleMouseClick();
    mButton.handleMouseClick();
    nButton.handleMouseClick();
    oButton.handleMouseClick();
    sc5.handleMouseClick();
    }
    if(currentScene === 5) {
    pButton.handleMouseClick();
    qButton.handleMouseClick();
    rButton.handleMouseClick();
    }
};

   
var draw = function() {
    if (currentScene === 0) {
        drawScene0();//draws splash screen
    }
   
};
