};

//Bubble Tea with color ONLY FOR CREDIT SCENE
var bubbleTea = function (x, y, scale_factor) {

    var Bubble = function (bubbleX, bubbleY) {
        pushMatrix();
        translate(bubbleX, bubbleY);
        noStroke();
        fill(77, 5, 5);
        ellipse(200, 300, 17, 17);
        fill(219, 181, 147);
        ellipse(196, 297, 6, 6);
        popMatrix();
    };

    scale(scale_factor);
    translate(-30, -25);
    pushMatrix();
    popMatrix();

    fill(255, 172, 48, 200);
    stroke(255, 255, 255);

    //bottom section
    beginShape();
    vertex(x + 153, y + 302);
    vertex(x + 155, y + 315);
    bezierVertex(x + 180, y + 325, x + 220, y + 325, x + 246, y + 315);
    vertex(x + 248, y + 302);
    endShape();

    //second to last section
    beginShape();
    vertex(x + 146, y + 264);
    vertex(x + 151, y + 300);
    bezierVertex(x + 170, y + 315, x + 230, y + 315, x + 249, y + 300);
    vertex(x + 254, y + 264);
    endShape();

    //third to last section drink
    fill(255, 172, 48, 210);
    stroke(255, 255, 255);
    beginShape();
    vertex(x + 129, y + 145);
    vertex(x + 143, y + 260);
    bezierVertex(x + 160, y + 283, x + 240, y + 283, x + 257, y + 260);
    vertex(x + 271, y + 145);
    endShape();

    fill(247, 197, 143, 200);
    ellipse(x + 200, y + 145, 144, 20);

    //third to last section
    noFill();
    stroke(255, 255, 255);
    ellipse(x + 200, y + 100, 160, 30);

    beginShape();
    vertex(x + 127, y + 132);
    vertex(x + 143, y + 260);
    bezierVertex(x + 160, y + 283, x + 240, y + 283, x + 257, y + 260);
    vertex(x + 273, y + 132);
    endShape();
    noFill();

    Bubble(x, y);
    Bubble(x - 30, y - 10);
    Bubble(x + 30, y + 10);
    Bubble(x + 40, y - 8);
    Bubble(x + 20, y - 16);
    Bubble(x - 36, y + 6);
    Bubble(x - 6, y + 16);
    Bubble(x - 10, y - 14);

    pushMatrix();
    noStroke();
    rotate(20);
    fill(191, 74, 74);
    rect(x + 330, y - 340, 15, 278);
    ellipse(x + 338, y + -62, 14, 6);
    fill(212, 111, 111);
    rect(x + 333, y - 340, 5, 278);
    fill(173, 35, 35);
    ellipse(x + 338, y - 340, 14, 6);
    popMatrix();

    strokeWeight(1);
    noFill();
    stroke(255, 255, 255);
    bezier(x + 155, y + 315, x + 180, y + 325, x + 220, y + 325, x + 246, y + 315);
    bezier(x + 151, y + 300, x + 170, y + 315, x + 230, y + 315, x + 249, y + 300);
    bezier(x + 143, y + 260, x + 160, y + 283, x + 240, y + 283, x + 257, y + 260);
    bezier(x + 125, y + 130, x + 150, y + 150, x + 250, y + 150, x + 275, y + 130);

    beginShape();
    vertex(x + 120, y + 100);
    vertex(x + 125, y + 130);
    bezierVertex(x + 150, y + 150, x + 250, y + 150, x + 275, y + 130);
    vertex(x + 280, y + 100);
    endShape();
    line(x + 235, y + 114, x + 253, y + 111);

    //shine
    stroke(255, 255, 255, 200);
    strokeWeight(10);
    line(x + 140, y + 120, x + 144, y + 150);
    line(x + 161, y + 280, x + 147, y + 170);
    line(x + 163, y + 295, x + 165, y + 307);
    strokeWeight(5);
    line(x + 150, y + 120, x + 152, y + 134);
    line(x + 164, y + 210, x + 155, y + 150);
    line(x + 166, y + 225, x + 170, y + 257);
    line(x + 171, y + 283, x + 174, y + 300);
};

//Bubble Tea with color ONLY FOR Select SCENE
var BubbleTea = function (x, y, teaSize) {

    // Bubble Function
    var Bubble = function (bubbleX, bubbleY) {
        pushMatrix();
        translate(bubbleX, bubbleY);
        noStroke();
        fill(77, 5, 5);
        ellipse(0, 0, 17 * teaSize, 17 * teaSize);
        fill(219, 181, 14);
        ellipse(-4 * teaSize, -3 * teaSize, 6 * teaSize, 6 * teaSize);
        popMatrix();
    };

    fill(255, 172, 48, 200);
    stroke(255, 255, 255);

    // Bottom section
    beginShape();
    vertex(x + 153 * teaSize, y + 302 * teaSize);
    vertex(x + 155 * teaSize, y + 315 * teaSize);
    bezierVertex(x + 180 * teaSize, y + 325 * teaSize, x + 220 * teaSize, y + 325 * teaSize, x + 246 * teaSize, y + 315 * teaSize);
    vertex(x + 248 * teaSize, y + 302 * teaSize);
    endShape();

    // Second to last section
    beginShape();
    vertex(x + 146 * teaSize, y + 264 * teaSize);
    vertex(x + 151 * teaSize, y + 300 * teaSize);
    bezierVertex(x + 170 * teaSize, y + 315 * teaSize, x + 230 * teaSize, y + 315 * teaSize, x + 249 * teaSize, y + 300 * teaSize);
    vertex(x + 254 * teaSize, y + 264 * teaSize);
    endShape();

    // Third to last section drink
    fill(255, 172, 48, 210);
    stroke(255, 255, 255);
    beginShape();
    vertex(x + 129 * teaSize, y + 145 * teaSize);
    vertex(x + 143 * teaSize, y + 260 * teaSize);
    bezierVertex(x + 160 * teaSize, y + 283 * teaSize, x + 240 * teaSize, y + 283 * teaSize, x + 257 * teaSize, y + 260 * teaSize);
    vertex(x + 271 * teaSize, y + 145 * teaSize);
    endShape();

    // Third to last section ellipse
    fill(255, 172, 48, 210);
    ellipse(x + 200 * teaSize, y + 145 * teaSize, 144 * teaSize, 20 * teaSize);

    // Third to last section outer ellipse
    noFill();
    stroke(255, 255, 255);
    ellipse(x + 200 * teaSize, y + 100 * teaSize, 160 * teaSize, 30 * teaSize);
    
    beginShape();
    vertex(x + 120* teaSize, y + 100* teaSize);
    vertex(x + 129* teaSize, y + 146* teaSize);
    bezierVertex(x + 145* teaSize, y + 159* teaSize, x + 252*     teaSize, y + 159* teaSize, x + 271* teaSize, y + 146* teaSize);
    vertex(x + 280* teaSize, y + 101* teaSize);
    endShape();
    noFill();

    // Bubbles
    Bubble(x + 176 * teaSize, y + 286 * teaSize);
    Bubble(x + 231 * teaSize, y + 297 * teaSize);
    Bubble(x + 169 * teaSize, y + 308 * teaSize);
    Bubble(x + 199 * teaSize, y + 299 * teaSize);
    Bubble(x + 212 * teaSize, y + 313 * teaSize);
    Bubble(x + 219 * teaSize, y + 284 * teaSize);
    Bubble(x + 240 * teaSize, y + 278 * teaSize);
    Bubble(x + 158 * teaSize, y + 284 * teaSize);

    // Rest of the code...

    // Straw Portion
    pushMatrix();
    rotate(20);
    fill(191, 74, 74);
    rect(x + 300 * teaSize, y - 352 * teaSize, 15 * teaSize, 278 * teaSize);
    fill(212, 111, 111);
    rect(x + 303 * teaSize, y - 352 * teaSize, 5 * teaSize, 278 * teaSize);
    ellipse(x + 307 * teaSize, y + -73 * teaSize, 14 * teaSize, 6 * teaSize);
    popMatrix();

    strokeWeight(1);
    noFill();
    stroke(255, 255, 255);

    // Rest of the code...

    // Shine
    stroke(255, 255, 255, 200);
    strokeWeight(10);
    line(x + 140 * teaSize, y + 120 * teaSize, x + 144 * teaSize, y + 150 * teaSize);
    line(x + 161 * teaSize, y + 280 * teaSize, x + 147 * teaSize, y + 170 * teaSize);
    line(x + 163 * teaSize, y + 295 * teaSize, x + 165 * teaSize, y + 307 * teaSize);
    strokeWeight(5);
    line(x + 150 * teaSize, y + 120 * teaSize, x + 152 * teaSize, y + 134 * teaSize);
    line(x + 164 * teaSize, y + 210 * teaSize, x + 155 * teaSize, y + 150 * teaSize);
    line(x + 166 * teaSize, y + 225 * teaSize, x + 170 * teaSize, y + 257 * teaSize);
    line(x + 171 * teaSize, y + 283 * teaSize, x + 174 * teaSize, y + 300 * teaSize);
};

