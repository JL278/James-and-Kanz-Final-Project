    endShape();

    // Green onion
    fill(255, 255, 255); // Light green //79, 189, 101
    arc(foodX + 235 * foodSize / 100, foodY + 254 * foodSize / 100, 51 * foodSize / 100, 35 * foodSize / 100, -21, 346); // Shadow
